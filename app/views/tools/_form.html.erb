<%= form_for(@tool) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :quantity %>
  <%= f.text_field :quantity %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :user %>
  <%= f.select :user, options_for_select(User.all.pluck(:username)) %>
  <%= f.submit %>
<% end %>
